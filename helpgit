echo ""
echo "Procédure complète :"
echo ""
echo "// 1/ Création d'un repo sur github"
echo "// 2/ git clone git@github:bennekrouf/repo.git"
echo "// 3/Création d'une branche de dev"
echo ""
echo "git branch develop"
echo "git push -u origin develop"
echo ""
echo ""
echo "// 4/ Nouveau développeur"
echo ""
echo "git clone git@github:bennekrouf/repo.git"
echo "git checkout -b develop origin/develop"
echo ""
echo ""
echo "// 5/ Création d'une nouvelle feature"
echo ""
echo "// git checkout -b feature-machin develop"
echo ""
echo ""
echo "// 6/ Commit local de la feature"
echo ""
echo "git status"
echo "git add *"
echo "git commit"
echo ""
echo ""
echo "// 7/ Fin de la feature"
echo "git pull origin develop"
echo "git checkout develop"
echo "git merge feature-machin"
echo "git push"
echo "git branch -d feature-machin // suppression de la feature"
echo ""
echo ""
echo "// 8/ Préparation d'une release"
echo ""
echo "git checkout -b release-0.1 develop"
echo ""
echo "// Revue de code"
echo ""
echo "// Fin de la release : "
echo ""
echo "git checkout master"
echo ""
echo ""
echo ""
echo ""
echo "------------------------------------------------------------------------------------------------------------------------------"

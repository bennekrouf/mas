echo "git remote set-url origin https://bennekrouf@git.assembla.com/angular-phonecat.git // fait pointer le remote origin vers : angular-phonecat du user bennekrouf "
echo "git push origin // pousse les changements vers le remote origin"
echo ""
echo "git branch // Liste des branch"
echo "git branch -r // branch remote (remote <> branch)"
echo "git remote // liste des remotes"
echo "git remote -v // liste des remotes avec url"
echo ""
echo ""
echo "Exemple :"
echo ""
echo "angular-tuto    git@assembla.com:bennekrouf/angular-phonecat.git (fetch)"
echo "angular-tuto    git@assembla.com:bennekrouf/angular-phonecat.git (push)"
echo "origin  git://github.com/angular/angular-phonecat.git (fetch)"
echo "origin  git://github.com/angular/angular-phonecat.git (push)"
echo "origin-phonecat git@git.assembla.com:angular-phonecat.git (fetch)"
echo "origin-phonecat git@git.assembla.com:angular-phonecat.git (push)"

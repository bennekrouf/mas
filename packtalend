source conf.secret

TARGET_DIR=talend

HOME_LIVRAISON=LIVRAISON/16JUILLET


if [ ! -d $TARGET_DIR ]; then
	mkdir $TARGET_DIR
fi

chmod +x $HOME_LIVRAISON/talend/Ordonnanceur/Ordonnanceur_run.sh

cp -r $HOME_LIVRAISON/talend/* $TARGET_DIR

tar -zcvf aptisec-1.0-talend.tar.gz $TARGET_DIR
rm -r $TARGET_DIR


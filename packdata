source conf.secret

TARGET_DIR=data

if [ ! -d $TARGET_DIR ]; then
	mkdir $TARGET_DIR
fi

./exportdb

mv dump_"$PROJET"_full.sql $TARGET_DIR
mv dump_"$PROJET".sql $TARGET_DIR

cp loaddump $TARGET_DIR
cp loaddump_full $TARGET_DIR

tar -zcvf aptisec-1.0-data.tar.gz $TARGET_DIR
rm -r $TARGET_DIR


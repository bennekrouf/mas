source conf.secret

TARGET_DIR=data
HOME_LIVRAISON=LIVRAISON/16JUILLET


if [ ! -d $TARGET_DIR ]; then
	mkdir $TARGET_DIR
fi

mkdir $TARGET_DIR/dump
mkdir $TARGET_DIR/dump-full

cp -r $HOME_LIVRAISON/dump/* $TARGET_DIR/dump
cp -r $HOME_LIVRAISON/dump-full/* $TARGET_DIR/dump-full

cp ~/mas/loaddump $TARGET_DIR/dump
cp ~/mas/loaddump $TARGET_DIR/dump-full

tar -zcvf aptisec-1.0-data.tar.gz $TARGET_DIR
rm -r $TARGET_DIR

#tar -zxvf tar-archive-name.tar.gz